<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.mParticle.SampleApp"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_account_header"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/account_title"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:textSize="24sp"
        />
        <LinearLayout
            android:id="@+id/account_login_layout"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Theme.mParticle.SampleApp.TextInputLayout"
                android:layout_width="342dp"
                android:layout_height="54dp"
                android:hint="@string/account_user_header">
                <com.google.android.material.textfield.TextInputEditText
                style="@style/Theme.mParticle.SampleApp.TextInputEditText"
                android:textIsSelectable="false"
                android:enabled="false"
                android:text="@string/account_user_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/account_logout_layout"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="342dp"
                android:layout_height="24dp"
                android:text="@string/account_user_header2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/lato_regular"
                />
            <TextView
                android:layout_width="342dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@color/gray_999999"
                android:text="@string/account_user_value"
                android:textSize="16sp"
                android:fontFamily="@font/lato_regular"
                />
        </LinearLayout>

    <Button
        android:id="@+id/account_cta"
        android:theme="@style/Theme.mParticle.SampleApp.Button"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="@string/account_cta_login"
        />
    <TextView
        android:id="@+id/tv_account_disclaimer"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="@string/account_disclaimer"
        android:textColor="@color/white"
        app:fontFamily="@font/lato_regular"
        android:alpha=".6"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        />
</LinearLayout>