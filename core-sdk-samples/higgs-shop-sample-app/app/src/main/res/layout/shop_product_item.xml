<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black_121212"
    android:layout_width="343dp"
    android:layout_height="338dp">
        <ImageView
            android:src="@drawable/product_image_placeholder"
            android:id="@+id/product_item_picture"
            android:layout_width="343dp"
            android:layout_height="264dp"
            android:contentDescription="@string/shop_product_picture" />
        <LinearLayout
            android:background="@color/blue_4079FE"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp">
                <TextView
                    android:id="@+id/tv_product_item_label"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/shop_product_item_label"
                    android:textColor="@color/white"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/iv_product_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:src="@drawable/icon_right_arrow"
                    android:gravity="end"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black_121212" />
</LinearLayout>
